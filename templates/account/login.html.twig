{% extends 'base.html.twig' %}

{% block title %}Hello My Login Page!{% endblock %}

{% block body %}

    <div class='row'>
        <div class='col-md-6 offset-md-3'>
        <center>
        <h4>Login</h4>
        <p>
        Not registered yet ? <a href="{{ path('app_register') }}">register!</a>
        </p>
        </center>
        <div>
            {{ form(form) }}
        </div>
        {% if error %}
        <div>
            {{ error }}
        </div>
        {% endif %}
        </div>
    </div>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

{% endblock %}
